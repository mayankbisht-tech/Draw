{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../",                             
    "baseUrl": ".",                               
    "paths": {
      "@db": ["../packages/db/src/index"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["../packages/db/src", "src"],       
  "exclude": ["node_modules", "dist"]
}
