// backend/tsconfig.json

{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "..",                     // Look for source files starting from the project root
    "baseUrl": "..",                     // Set the base for path aliases to the project root
    "paths": {
      "@db": ["packages/db/src"]     // Define the "@db" alias
    },
    "outDir": "./dist",                  // Output compiled files to the backend's dist folder
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",                        // Include all files from the backend's src
    "../packages/db/src/**/*"          // IMPORTANT: Also include the shared db package
  ]
}